<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.home.connections.mappers.DynamicValuesMapper">

    <!-- Query to get a dynamic value for a specific category -->
    <select id="getDynamicValue" parameterType="map" resultType="com.home.connections.dto.DynamicValue">
        SELECT
            id as id,
            category as category,
            value as value,
            type as type
        FROM DYNAMIC_VALUES
        WHERE LOWER(category) = LOWER(#{category}) AND LOWER(value) = LOWER(#{value})
    </select>
</mapper>